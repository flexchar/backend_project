@model MusicCD

<div
    class="w-full sm:w-1/2 md:w-1/3 flex flex-col bg-white my-2 lg:my-0 mx-2 shadow"
>
    <img data-random class="w-full" />

    <div class="flex-1 p-4">
        <strong>Album:</strong>
        @Model.Label
        <br />
        <strong>Artist:</strong>
        @Model.Artist
        <br />
        <strong>Price:</strong>
        @Model.Price
        <br />
        <div>
            <strong>Tracks: @Model.Tracks.Count</strong>

            <ol>
                @foreach (Track t in Model.Tracks) {
                <li>@t.Title @t.Composer @t.Length</li>
                }
            </ol>
            <p>
                <strong>Total playing time:</strong>
                @Model.PlayingTime
            </p>
        </div>
    </div>
    @await Component.InvokeAsync("AddToCart", @Model.ProductId)
</div>
