@model MusicCD

<div
    class="w-full sm:w-1/2 md:w-1/3 flex flex-col bg-white my-2 lg:my-0 mx-2 shadow"
>
    <img data-random class="w-full" />

    <div class="flex-1 p-4">
        <h2 class="text-xl py-2">@Model.Label</h2>
        <p>by @Model.Artist</p>
    </div>

    <div class="p-4 bg-gray-100 text-gray-700">
        TRACKS @Model.Tracks.Count

        <ol class="text-gray-900 pt-2">
            @foreach (Track t in Model.Tracks) {
            <li class="flex justify-between">
                <p>@t.Title @t.Composer</p>
                <p title="Duration @Model.PlayingTime">ðŸ’¿ @t.Length</p>
            </li>
            }
        </ol>
    </div>

    <div class="p-4 mb-4 bg-green-100 text-green-700 flex justify-between">
        <p>@Model.Price.ToString("c")</p>
        <p title="Duration @Model.PlayingTime">ðŸ’¿ @Model.PlayingTime</p>
    </div>

    @await Component.InvokeAsync("AddToCart", @Model.ProductId)
</div>
