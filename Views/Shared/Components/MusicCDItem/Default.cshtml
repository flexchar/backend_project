@model MusicCD

<div class="w-1/3 bg-white mx-2 shadow">
    <img src="https://picsum.photos/300/200" class="w-full" />

    <div class="p-4">
        <strong>Album:</strong>
        @Model.Label
        <br />
        <strong>Artist:</strong>
        @Model.Artist
        <br />
        <strong>Price:</strong>
        @Model.Price
        <br />
        <div>
            <strong>Tracks: @Model.Tracks.Count</strong>

            <ol>
                @foreach (Track t in Model.Tracks) {
                <li>@t.Title @t.Composer @t.Length</li>
                }
            </ol>
            <p>
                <strong>Total playing time:</strong>
                @Model.PlayingTime
            </p>
        </div>
    </div>
</div>
