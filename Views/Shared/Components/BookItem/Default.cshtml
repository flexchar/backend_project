@model Book

<div class="w-1/3 bg-white mx-2 shadow">
    <img src="https://source.unsplash.com/random/200x200" class="w-full" />

    <div class="p-4">
        Title: @Model.Title
        <br />
        Director: @Model.Author
        <br />
        Price: @String.Format("{0:0.00}", Model.Price)
        <br />
        ISBN: @Model.ISBN
        <br />
    </div>
</div>
