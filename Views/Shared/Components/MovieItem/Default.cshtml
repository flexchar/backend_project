@model Movie

<div class="w-1/3 bg-white mx-2 shadow">
    <img src="@Model.ImageUrl" class="w-full" alt="@Model.Title" />
    <div class="p-4">
        <dl>
            <dt>Title</dt>
            <dd>@Model.Title</dd>
        </dl>
        <dl>
            <dt>Director</dt>
            <dd>@Model.Director</dd>
        </dl>
        <dl>
            <dt>Price</dt>
            <dd>@String.Format("{0:0.00}", Model.Price)</dd>
        </dl>
        @if (!String.IsNullOrEmpty(Model.ImageUrl)) { }
    </div>
</div>
