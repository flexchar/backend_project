@model Movie

<div
    class="w-full sm:w-1/2 md:w-1/3 flex flex-col bg-white my-2 lg:my-0 mx-2 shadow"
>
    <img data-random class="w-full" alt="@Model.Title" />
    <div class="flex-1 p-4">
        <dl>
            <dt>Title</dt>
            <dd>@Model.Title</dd>
        </dl>
        <dl>
            <dt>Director</dt>
            <dd>@Model.Director</dd>
        </dl>
        <dl>
            <dt>Price</dt>
            <dd>@String.Format("{0:0.00}", Model.Price)</dd>
        </dl>
    </div>
    @await Component.InvokeAsync("AddToCart", @Model.ProductId)
</div>
